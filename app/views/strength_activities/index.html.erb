<%- model_class = StrengthActivity -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:note) %></th>
      <th><%= model_class.human_attribute_name(:photo_file_name) %></th>
      <th><%= model_class.human_attribute_name(:act_type) %></th>
      <th><%= model_class.human_attribute_name(:weight) %></th>
      <th><%= model_class.human_attribute_name(:sets) %></th>
      <th><%= model_class.human_attribute_name(:reps) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @strength_activities.each do |strength_activity| %>
      <tr data-link="<%= strength_activity_path(strength_activity) %>">
        <td><%= strength_activity.note %></td>
        <td><%= strength_activity.photo_file_name %></td>
        <td><%= strength_activity.act_type %></td>
        <td><%= strength_activity.weight %></td>
        <td><%= strength_activity.sets %></td>
        <td><%= strength_activity.reps %></td>
        <td><%= strength_activity.created_at.strftime("%d %b %y") %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_strength_activity_path(strength_activity), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      strength_activity_path(strength_activity),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

