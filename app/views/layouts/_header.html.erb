<%= nav_bar :responsive => :top, :brand => "Project2", :responsive => true do %>
    <%= menu_group do %>
        <%= menu_item "Home", root_path %>
        <% if current_user %>
            <%= menu_item "User", user_path(current_user[:id])%>
        <% end %>


        <%= drop_down "Products" do %>
            <%= menu_item "Things you can't afford", root_path %>
            <%= menu_item "Things that won't suit you anyway", root_path %>
            <%= menu_item "Things you're not even cool enough to buy anyway", root_path %>
        <% end %>

        <%= menu_item "About Us", about_path %>
        <%= menu_item "Contact", contact_path %>
    <% end %>
    <%= menu_group :pull => :right do %>
        <% if current_user %>
            <%= menu_item "#{current_user.first_name} #{current_user.last_name}", user_path(current_user) %>
            <%= menu_item "Log Out", signout_path, method: "delete" %>

        <% else %>
            <%= form_for :session, url: sessions_path, html: {:class => "navbar-form pull-right"} do |f| -%>
                <p><%= f.text_field :email %>
                  <%= f.password_field :password, value: 123456 %>
                  <%= f.submit 'Sign in' %></p>
            <% end -%>
        <% end %>
    <% end %>
<% end %>