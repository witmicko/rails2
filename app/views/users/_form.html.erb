<%= form_for @user, :html => {:class => "form-horizontal user"} do |f| %>

    <% if @user.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being
              saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @user.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :first_name, :class => 'control-label col-lg-2' %>
      <div class="col-lg-5">
        <%= f.text_field :first_name, :class => 'form-control' %>
      </div>
      <%= f.error_span(:first_name) %>
    </div>
    <div class="form-group">
      <%= f.label :last_name, :class => 'control-label col-lg-2' %>
      <div class="col-lg-5">
        <%= f.text_field :last_name, :class => 'form-control' %>
      </div>
      <%= f.error_span(:last_name) %>
    </div>
    <div class="form-group">
      <%= f.label :email, :class => 'control-label col-lg-2' %>
      <div class="col-lg-5">
        <%= f.text_field :email, :class => 'form-control' %>
      </div>
      <%= f.error_span(:email) %>
    </div>
    <div class="form-group">
      <%= f.label :gender, :class => 'control-label col-lg-2' %>
      <div class="col-lg-5">
        <%= f.select :gender, User::GENDERS, :class => 'form-control' %>
      </div>
      <%= f.error_span(:gender) %>
    </div>
    <div class="form-group">
      <%= f.label :athlete_type, :class => 'control-label col-lg-2' %>
      <div class="col-lg-5">
        <%= f.select :athlete_type, User::ATHLETE_TYPES, :class => 'form-control' %>
      </div>
      <%= f.error_span(:athlete_type) %>
    </div>
    <div class="form-group">
      <%= f.label :date_of_birth, :class => 'control-label col-lg-2' %>
      <div class="col-lg-5">
        <%= date_field(:user, :date_of_birth)%>
      </div>
      <%= f.error_span(:date_of_birth) %>
    </div>
    <div class="form-group">
      <%= f.label :password, :class => 'control-label col-lg-2' %>
      <div class="col-lg-5">
        <%= f.password_field :password, :value=> '123456', :class => 'form-control'  %>
      </div>
      <%= f.error_span(:password) %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, :class => 'control-label col-lg-2' %>
      <div class="col-lg-5">
        <%= f.password_field :password_confirmation,:value=> '123456', :class => 'form-control' %>
      </div>
      <%= f.error_span(:password) %>
    </div>

    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-5">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    users_path, :class => 'btn btn-default' %>
      </div>
    </div>

<% end %>
